@using EntityLayer.Concrete 
@model List<Destinational>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.DestinationId</td>
                    <td>@item.DestinationCity</td>
                    <td>@item.DestinationPrice</td>
                    <td>@item.DestinationCapacity</td>
                    <td><a href="#" class="btn btn-ouyline-success">Sitede Gör</a></td>
                    <td><a href="#" class="btn btn-ouyline-danger">Sil</a></td>
                    <td><a href="#" class="btn btn-ouyline-info">Güncelle</a></td>
                </tr>
            }
</table>
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary">Yeni Rota Ekle</a>

