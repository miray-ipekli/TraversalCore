@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile Ziyaretçi Ekleme</h1>
<br />  
<form method="post">
    <label>Ziyaretçi Adı</label>
    <input type="text" class="form-control" asp-for="VisitorName" />
    <br />
    <label>Ziyaretçi Soyadı</label>
    <input type="text" class="form-control" asp-for="VisitorSurname" />
    <br />
    <label>Ziyaretçi Maili</label>
    <input type="text" class="form-control" asp-for="VisitorMail" />
    <br />
    <label>Ziyaretçi Şehir</label>
    <input type="text" class="form-control" asp-for="VisitorCity" />
    <br />
    <label>Ziyaretçi Ülke</label>
    <input type="text" class="form-control" asp-for="VisitorCountry" />
    <br />
    <button class="btn btn-outline-primary">Ziyaretçiyi Ekle</button>
</form>
